{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-m32",
                "-fdiagnostics-color=always",
                "-g",
                "-DMINIUI_BGR888",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/MiniUI/Types/Src/*.cpp",
                "${workspaceFolder}/MiniUI/Font/Src/*.cpp",
                "${workspaceFolder}/MiniUI/Controls/Src/*.cpp",
                "-I${workspaceFolder}/MiniUI/Types/Inc",
                "-I${workspaceFolder}/MiniUI/Font/Inc",
                "-I${workspaceFolder}/MiniUI/Controls/Inc",
                "-o",
                "${workspaceFolder}/MiniUI.exe",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}